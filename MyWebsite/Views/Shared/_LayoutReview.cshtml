@{
    var pRepo = new MyWebsite.Repositories.PageRepository(WebsiteConfig.ConnectionString);
    var pcRepo = new MyWebsite.Repositories.PageContentRepository(WebsiteConfig.ConnectionString);
    var menuRepo = new MyWebsite.Repositories.MenuRepository(WebsiteConfig.ConnectionString);
    var layoutPage = pRepo.GetBySlug("layout");
    layoutPage.ListPageContent = pcRepo.GetBySlugPage("layout");
    var listMenu = menuRepo.GetAll();
    var appointment = (from x in listMenu where x.Slug == "appointment" select x).FirstOrDefault() == null ? new MenuVM()
                        : (from x in listMenu where x.Slug == "appointment" select x).First();
    // / Home/Appointments
    var oLocation = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "location").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "location").First();

    var oPhone = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "phone").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "phone").First();

    var oEmail = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "email").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "email").First();

    var oFacebook = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "facebook").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "facebook").First();

    var oTwitter = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "twitter").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "twitter").First();

    var oInstagram = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "instagram").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "instagram").First();

    var oLinkedin = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "linkedin").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "linkedin").First();

    var oLogo = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "logo").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "logo").First();

    var listQuickLink = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "quick_links").ToList();
    var listOurService = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "our_services").ToList();

    var oAddress = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "address").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "address").First();

    var oEmail2 = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "email_2").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "email_2").First();

    var oWhatsapp = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "whatsapp").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "whatsapp").First();

    var oCopyRight = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "copy_right").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "copy_right").First();

    var listDesignedBy = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "designed_by" && x.IsActive == true).ToList();

    var message = TempData["message"] as string;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Terapia - Physical Therapy Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Topbar Start -->
    <div class="container-fluid bg-dark px-5 d-none d-lg-block">
        <div class="row gx-0 align-items-center" style="height: 45px;">
            <div class="col-lg-8 text-center text-lg-start mb-lg-0">
                <div class="d-flex flex-wrap">
                    @if (oLocation.IsActive == true)
                    {
                        <a href="@oLocation.Header" target="_blank" class="text-light me-4"><i class="fas fa-map-marker-alt text-primary me-2"></i>Find A Location</a>
                    }
                    @if (oWhatsapp.IsActive == true)
                    {
                        <a href="javascript:void(0)" class="text-light me-4"><i class="fab fa-whatsapp text-primary me-2"></i>@oWhatsapp.Body</a>
                    }
                    @if (oEmail.IsActive == true)
                    {
                        <a href="@oEmail.Header" class="text-light me-0"><i class="fas fa-envelope text-primary me-2"></i>@oEmail.Body</a>
                    }
                </div>
            </div>
            <div class="col-lg-4 text-center text-lg-end">
                <div class="d-flex align-items-center justify-content-end">
                    @if (oFacebook.IsActive == true)
                    {
                        <a href="@oFacebook.Header" target="_blank" class="btn btn-light btn-square border rounded-circle nav-fill me-3"><i class="fab fa-facebook-f"></i></a>
                    }
                    @if (oTwitter.IsActive == true)
                    {
                        <a href="@oTwitter.Header" target="_blank" class="btn btn-light btn-square border rounded-circle nav-fill me-3"><i class="fab fa-twitter"></i></a>
                    }
                    @if (oInstagram.IsActive == true)
                    {
                        <a href="@oInstagram.Header" target="_blank" class="btn btn-light btn-square border rounded-circle nav-fill me-3"><i class="fab fa-instagram"></i></a>
                    }
                    @if (oLinkedin.IsActive == true)
                    {
                        <a href="@oLinkedin.Header" target="_blank" class="btn btn-light btn-square border rounded-circle nav-fill me-0"><i class="fab fa-linkedin-in"></i></a>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->

    <div class="container-fluid position-relative p-0">
        <nav class="navbar navbar-expand-lg navbar-light bg-white px-4 px-lg-5 py-3 py-lg-0">
            <a href="/" class="navbar-brand p-0">
                @if (oLogo.IsActive == true)
                {
                    <h1 class="text-primary m-0"><img src="@oLogo.FilePath" /></h1>
                }
                else
                {
                    <h1 class="text-primary m-0">YOUR-LOGO</h1>
                }
                <!-- <img src="img/logo.png" alt="Logo"> -->
                Admin Review
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>
            @* <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    @foreach (var item in listMenu.Where(x => x.Slug != "appointment"))
                    {
                        if (item.Slug == "home")
                        {
                            <a href="@item.Content" class="nav-item nav-link active">@item.Label</a>
                        }
                        else
                        {
                            <a href="@item.Content" class="nav-item nav-link">@item.Label</a>
                        }
                    }
                </div>
                <a href="@appointment.Content" id="appointment" class="btn btn-primary rounded-pill text-white py-2 px-4 flex-wrap flex-sm-shrink-0">@appointment.Title</a>
            </div> *@
        </nav>
    </div>



    <div style="margin-top:15px">
        @RenderBody()
    </div>

    @if (message != null)
    {
        TempData["message"] = null;
        <script>
            alert('@message');
        </script>
    }

    <!-- Footer Start -->
    <div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
                        @if (oLogo.IsActive == true)
                        {
                            <h4 class="text-white mb-4"><img src="@oLogo.FilePath" style="width: 135px" /></h4>
                            <p>
                                @oLogo.Body
                            </p>
                        }
                        else
                        {
                            <h4 class="text-white mb-4">YOUR-LOGO</h4>
                            <p></p>
                        }
                        <div class="d-flex align-items-center">
                            <i class="fas fa-share fa-2x text-white me-2"></i>
                            @if (oFacebook.IsActive == true)
                            {
                                <a class="btn-square btn btn-primary text-white rounded-circle mx-1" href="@oFacebook.Header" target="_blank"><i class="fab fa-facebook-f"></i></a>
                            }
                            @if (oTwitter.IsActive == true)
                            {
                                <a class="btn-square btn btn-primary text-white rounded-circle mx-1" href="@oTwitter.Header" target="_blank"><i class="fab fa-twitter"></i></a>
                            }
                            @if (oInstagram.IsActive == true)
                            {
                                <a class="btn-square btn btn-primary text-white rounded-circle mx-1" href="@oInstagram.Header" target="_blank"><i class="fab fa-instagram"></i></a>
                            }
                            @if (oLinkedin.IsActive == true)
                            {
                                <a class="btn-square btn btn-primary text-white rounded-circle mx-1" href="@oLinkedin.Header" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
                        <h4 class="mb-4 text-white">Quick Links</h4>
                        @foreach (var item in listQuickLink)
                        {
                            if (item.IsActive == true)
                            {
                                <a href="@item.Header"><i class="fas fa-angle-right me-2"></i> @item.Title</a>
                            }
                        }
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
                        <h4 class="mb-4 text-white">Our Services</h4>
                        @foreach (var item in listOurService)
                        {
                            if (item.IsActive == true)
                            {
                                <a href="@item.Header"><i class="fas fa-angle-right me-2"></i> @item.Title</a>
                            }
                        }
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
                        <h4 class="mb-4 text-white">Contact Info</h4>
                        @if (oAddress.IsActive == true)
                        {
                            <a href="javascript:void(0)"><i class="fa fa-map-marker-alt me-2"></i> @oAddress.Body</a>
                        }
                        @if (oEmail.IsActive == true)
                        {
                            <a href="@oEmail.Header"><i class="fas fa-envelope me-2"></i> @oEmail.Body</a>
                        }
                        @if (oEmail2.IsActive == true)
                        {
                            <a href="@oEmail2.Header"><i class="fas fa-envelope me-2"></i> @oEmail2.Body</a>
                        }
                        @if (oPhone.IsActive == true)
                        {
                            <a href="@oPhone.Header"><i class="fas fa-phone me-2"></i> @oPhone.Body</a>
                        }
                        @if (oWhatsapp.IsActive == true)
                        {
                            <a href="@oWhatsapp.Header" class="mb-3"><i class="fab fa-whatsapp me-2"></i> @oWhatsapp.Body</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="container-fluid copyright py-4">
        <div class="container">
            <div class="row g-4 align-items-center">
                <div class="col-md-6 text-center text-md-start mb-md-0">
                    @if (oCopyRight.IsActive == true)
                    {
                        <span class="text-white"><a href="@oCopyRight.Header" target="_blank"><i class="fas fa-copyright text-light me-2"></i>@oCopyRight.Title</a>, @oCopyRight.Body.</span>
                    }      
                </div>
                <div class="col-md-6 text-center text-md-end text-white">
                    <span>Designed By</span>
                    @foreach (var oDesignedBy in listDesignedBy)
                    {
                        <a class="border-bottom" href="@oDesignedBy.Header" target="_blank">@oDesignedBy.Body</a>
                        <span> & </span>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Copyright End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>


    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>

</body>

</html>