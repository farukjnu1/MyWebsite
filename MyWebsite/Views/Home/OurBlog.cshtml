@model IEnumerable<MyWebsite.Models.PageVM>
@{
    ViewData["Title"] = "OurBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var oBlog = Model.Where(x => x.Slug == "our_blog").FirstOrDefault() == null ? new PageVM() : Model.Where(x => x.Slug == "our_blog").First();
    var ourBlog = oBlog.ListPageContent.Where(x => x.SlugPageContent == "our_blogs").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM() :
                        oBlog.ListPageContent.Where(x => x.SlugPageContent == "our_blogs").First();
}

<!-- blog Start -->
<div class="container-fluid service bg-light py-5">
    <div class="container py-5">

        <div class="sub-style">
            <h4 class="sub-title px-3 mb-0">Our Blogs</h4>
        </div>
        <hr />
        <div class="row g-4 justify-content-center">
            <div class="col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="d-flex flex-column h-100">

                    <div class="mb-4">
                        <h3 class="mb-4"><i class="fa fa-check text-primary me-2"></i> @ourBlog.Title</h3>
                        <p class="mb-3" style="text-align: justify;text-justify: inter-word;">@Html.Raw(ourBlog.Header)</p>
                        <p class="mb-3" style="text-align: justify;text-justify: inter-word;">@Html.Raw(ourBlog.Body)</p>
                        <p class="mb-3" style="text-align: justify;text-justify: inter-word;">@Html.Raw(ourBlog.Footer)</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="video h-100">
                    <img src="@ourBlog.FilePath" class="img-fluid rounded w-100" style="object-fit: cover;" alt="">
                </div>
            </div>
        </div>
        <br />
        <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.2s">
            <a class="btn btn-primary rounded-pill text-white py-3 px-5" href="/Home/OurBlogs">More Blogs</a>
        </div>
    </div>
</div>
<!-- blog End -->

