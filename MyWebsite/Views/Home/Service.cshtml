@model IEnumerable<MyWebsite.Models.PageVM>
@{
    ViewData["Title"] = "Service";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var oService = Model.Where(x => x.Slug == "services").FirstOrDefault() == null ? new PageVM() : Model.Where(x => x.Slug == "services").First();
    var ourService = oService.ListPageContent.Where(x => x.SlugPageContent == "services").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM() :
                        oService.ListPageContent.Where(x => x.SlugPageContent == "services").First();
    //var listService = oService.ListPageContent.Where(x => x.SlugPageContent == "services").ToList();
}

<!-- Services Start -->
<div class="container-fluid service bg-light py-5">
    <div class="container py-5">
        
        <div class="sub-style">
            <h4 class="sub-title px-3 mb-0">What We Do</h4>
        </div>
        <hr/>
        <div class="row g-4 justify-content-center">
            <div class="col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="d-flex flex-column h-100">
                    
                    <div class="mb-4">
                        <h3 class="mb-4"><i class="fa fa-check text-primary me-2"></i> @ourService.Title</h3>
                        <p class="mb-3">
                            @Html.Raw(ourService.Header)
                        </p>
                        <p class="mb-3">
                            @Html.Raw(ourService.Body)
                        </p>
                        <p class="mb-3">
                            @Html.Raw(ourService.Footer)
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="video h-100">
                    <img src="@ourService.FilePath" class="img-fluid rounded w-100" style="object-fit: cover;" alt="">
                </div>
            </div>
        </div>
        <br />
        <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.2s">
            <a class="btn btn-primary rounded-pill text-white py-3 px-5" href="/Home/Services">Services More</a>
        </div>
    </div>
</div>
<!-- Services End -->