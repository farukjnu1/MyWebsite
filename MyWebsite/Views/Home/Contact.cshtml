@model MyWebsite.Models.ContactMessageVM
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var viewModel = (IEnumerable<MyWebsite.Models.PageVM>)ViewData["contact"];
    var oContact = viewModel.Where(x => x.Slug == "contact").FirstOrDefault() == null ? new PageVM() : viewModel.Where(x => x.Slug == "contact").First();
    var contact = oContact.ListPageContent.Where(x => x.SlugPageContent == "contact").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM() :
                        oContact.ListPageContent.Where(x => x.SlugPageContent == "contact").First();

    var map = oContact.ListPageContent.Where(x => x.SlugPageContent == "map").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM() :
                    oContact.ListPageContent.Where(x => x.SlugPageContent == "map").First();

    var layoutPage = viewModel.Where(x => x.Slug == "layout").FirstOrDefault() == null ? new PageVM() : viewModel.Where(x => x.Slug == "layout").First();
    var listLayout = oContact.ListPageContent.Where(x => x.SlugPage == "layout").ToList();

    var oLocation = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "location").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "location").First();

    var oPhone = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "phone").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "phone").First();

    var oEmail = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "email").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "email").First();

    var oFacebook = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "facebook").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "facebook").First();

    var oTwitter = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "twitter").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "twitter").First();

    var oInstagram = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "instagram").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "instagram").First();

    var oLinkedin = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "linkedin").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "linkedin").First();

    var oLogo = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "logo").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "logo").First();

    var listQuickLink = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "quick_links").ToList();
    var listOurService = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "our_services").ToList();

    var oAddress = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "address").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "address").First();

    var oEmail2 = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "email_2").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "email_2").First();

    var oMobile = layoutPage.ListPageContent.Where(x => x.SlugPageContent == "mobile").FirstOrDefault() == null ? new MyWebsite.Models.PageContentVM()
    : layoutPage.ListPageContent.Where(x => x.SlugPageContent == "mobile").First();
}

<!-- Contact Start -->
<div class="container-fluid contact py-5 bg-light">
    <div class="container py-5">
        <div class="section-title mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="sub-style mb-4">
                <h4 class="sub-title text-white px-3 mb-0">@contact.Title</h4>
            </div>
            <p class="mb-0 text-black-50">
                @contact.Body
            </p>
        </div>
        <div class="row g-4 align-items-center">
            <div class="col-lg-5 col-xl-5 contact-form wow fadeInLeft" data-wow-delay="0.1s">
                <h2 class="display-5 text-white mb-2">@contact.Header</h2>
                <p class="mb-4 text-white">
                    @contact.Footer
                </p>
                <form asp-controller="Home" asp-action="Contact" method="post">
                    <div class="row g-3">
                        <div class="col-lg-12 col-xl-12">
                            <div class="form-floating">
                                <input type="text" asp-for="FullName" required class="form-control bg-transparent border border-white" placeholder="Your Name">
                                <label for="FullName">Full Name</label>
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12 col-xl-6">
                            <div class="form-floating">
                                <input type="email" asp-for="Email" required class="form-control bg-transparent border border-white" placeholder="Your Email">
                                <label for="Email">Your Email</label>
                            </div>
                        </div>
                        <div class="col-lg-12 col-xl-6">
                            <div class="form-floating">
                                <input type="text" asp-for="Phone" required class="form-control bg-transparent border border-white" placeholder="Phone">
                                <label for="Phone">Your Phone</label>
                            </div>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" asp-for="Subject" required class="form-control bg-transparent border border-white" placeholder="Subject">
                                <label for="Subject">Subject</label>
                            </div>
                            <span asp-validation-for="Subject" required class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="Message" required class="form-control bg-transparent border border-white" placeholder="Leave a message here" style="height: 160px"></textarea>
                                <label for="Message">Message</label>
                            </div>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-light text-primary w-100 py-3">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-2 col-xl-2 wow fadeInUp" data-wow-delay="0.5s">
                <div class="bg-transparent rounded">
                    <div class="d-flex flex-column align-items-center text-center mb-4">
                        <div class="bg-white d-flex align-items-center justify-content-center mb-3" style="width: 90px; height: 90px; border-radius: 50px;"><i class="fa fa-map-marker-alt fa-2x text-primary"></i></div>
                        <h4 class="text-dark">Addresses</h4>
                        <p class="mb-0 text-white">@oAddress.Body</p>
                    </div>
                    <div class="d-flex flex-column align-items-center text-center mb-4">
                        <div class="bg-white d-flex align-items-center justify-content-center mb-3" style="width: 90px; height: 90px; border-radius: 50px;"><i class="fa fa-phone-alt fa-2x text-primary"></i></div>
                        <h4 class="text-dark">Mobile</h4>
                        <p class="mb-0 text-white">@oPhone.Body</p>
                        <p class="mb-0 text-white">@oMobile.Body</p>
                    </div>

                    <div class="d-flex flex-column align-items-center text-center">
                        <div class="bg-white d-flex align-items-center justify-content-center mb-3" style="width: 90px; height: 90px; border-radius: 50px;"><i class="fa fa-envelope-open fa-2x text-primary"></i></div>
                        <h4 class="text-dark">Email</h4>
                        <p class="mb-0 text-white">@oEmail.Body</p>
                        <p class="mb-0 text-white">@oEmail2.Body</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-xl-5 wow fadeInRight" data-wow-delay="0.3s">
                <div class="d-flex justify-content-center mb-4">
                    <a class="btn btn-lg-square btn-light rounded-circle mx-2" href="@oFacebook.Body"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-lg-square btn-light rounded-circle mx-2" href="@oTwitter.Body"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-lg-square btn-light rounded-circle mx-2" href="@oInstagram.Body"><i class="fab fa-instagram"></i></a>
                    <a class="btn btn-lg-square btn-light rounded-circle mx-2" href="@oLinkedin.Body"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <div class="rounded h-100">
                    <iframe class="rounded w-100"
                            style="height: 500px;" src="@map.Header"
                            loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->